<html>
    <head>
        <Title>Home</Title>
    </head>
    <body>
        <a href="/positions"><button>Positions</button></a>
        <a href="/logout"><button>Logout</button></a>
          <% if (locals.messages) {%>
          <h2>Applied On Positions:</h2>
          <ul>
            <% for (var i = 0; i < messages.length; i++) { %>
              <li><%= messages[i] %>
              <% if (messages[i].includes('accepted')) { %>
                <a href="/exams/<%=pids[i]%>"><button>Take Exams</button></a>
              <% } %>
              </li>
            <% } }%>
          </ul>
            
    </body>
</html>
